<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/playerViewHolderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:paddingStart="@dimen/list_item_text_padding_left"
        android:paddingTop="@dimen/list_item_text_padding_top"
        android:textColor="@color/primary_text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/playerViewHolderAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/playerViewHolderTitle"
        android:fontFamily="sans-serif"
        android:paddingBottom="@dimen/list_item_text_padding_bottom"
        android:paddingStart="@dimen/list_item_text_padding_left"
        android:textColor="@color/secondary_text"
        android:textSize="14sp" />

</RelativeLayout>