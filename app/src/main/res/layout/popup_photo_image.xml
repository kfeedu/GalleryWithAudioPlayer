<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/popupInfoSection"
        android:layout_width="match_parent"
        android:layout_height="@dimen/popup_nav_height"
        android:background="@color/third_text"
        android:elevation="5dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/popupDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:paddingStart="72dp"
            android:paddingTop="12dp"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/popupTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-light"
            android:paddingStart="72dp"
            android:paddingTop="32dp"
            android:textColor="@color/secondary_text"
            android:textSize="12sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/popupImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:paddingTop="@dimen/popup_nav_height" />
</RelativeLayout>